Checks: '
  -*,
  abseil-*,
  bugprone-*,
  clang-analyzer-*,
  cert-*,
  cppcoreguidelines-*,
  google-*,
  misc-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  '

WarningsAsErrors: '*'
CheckOptions:
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.VariableCase
    value: lower_case
  - key: readability-identifier-naming.MemberCase
    value: lower_case
  - key: readability-identifier-naming.EnumCase
    value: CamelCase
  - key: modernize-use-nodiscard.UserDefinedMacros
    value: 'MY_NODISCARD'
  - key: cppcoreguidelines-owning-memory.RawPointerHandling
    value: warn

HeaderFilterRegex: '^(?!.*/build/)(?!.*/moc_)(?!.*/ui_).*'
